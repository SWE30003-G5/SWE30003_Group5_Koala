@page
@model SWE30003_Group5_Koala.Pages.Manage.OrdersManager.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.User.Email)
        </dd>
    </dl>
    <div>
    <h4>Order Items</h4>
    <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OrderItems.First().MenuItem.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.OrderItems.First().Quantity)</th>
                    <th>@Html.DisplayNameFor(model => model.OrderItems.First().SubTotal)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OrderItems != null && Model.OrderItems.Any())
                {
                foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.MenuItem.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.SubTotal.ToString("C")</td>
                    </tr>
                }
                }
                else
                {
                <tr>
                    <td colspan="3">No items associated with this order.</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Order.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
