@page
@model SWE30003_Group5_Koala.Pages.Manage.ReservationsManager.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="reservationForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reservation.UserID" class="control-label"></label>
                <select asp-for="Reservation.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Reservation.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reservation.PartySize" class="control-label"></label>
                <input asp-for="Reservation.PartySize" class="form-control"/>
                <span asp-validation-for="Reservation.PartySize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reservation.Time" class="control-label"></label>
                <input asp-for="Reservation.Time" class="form-control" type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" id="reservationTime" />
                <span asp-validation-for="Reservation.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.TableID" class="control-label"></label>
                <select asp-for="Reservation.TableID" class="form-control" asp-items="ViewBag.TableID"></select>
                <span asp-validation-for="Reservation.TableID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reservation.Status" class="control-label"></label>
                <select asp-for="Reservation.Status" class="form-control" asp-items="Model.StatusOption"></select>
                <span asp-validation-for="Reservation.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/reservationsManger.js"></script>