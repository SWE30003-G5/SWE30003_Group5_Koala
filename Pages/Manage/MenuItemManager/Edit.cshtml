@page
@model SWE30003_Group5_Koala.Pages.Manage.MenuItemManager.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MenuItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MenuItem.ID" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="MenuItem.Name" class="control-label"></label>
                <input asp-for="MenuItem.Name" class="form-control" id="menuItemName" />
                <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="MenuItem.Price" class="control-label"></label>
                <input asp-for="MenuItem.Price" class="form-control" />
                <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MenuItem.IsAvailable" /> @Html.DisplayNameFor(model => model.MenuItem.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.ImageLocation" class="control-label"></label>
                <input asp-for="MenuItem.ImageLocation" class="form-control" id="imageLocation" readonly />
                <span asp-validation-for="MenuItem.ImageLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById('menuItemName').addEventListener('input', function () {
            const name = this.value.trim();
            if (name) {
                const formattedName = name.toLowerCase().replace(/\s+/g, '_') + ".jpg";
                document.getElementById('imageLocation').value = formattedName.charAt(0).toUpperCase() + formattedName.slice(1);
            } else {
                document.getElementById('imageLocation').value = '';
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
