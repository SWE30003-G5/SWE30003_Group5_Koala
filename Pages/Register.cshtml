﻿@page
@model SWE30003_Group5_Koala.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Center the main container */
        .main-content {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh; /* Centers the form vertically within available viewport minus header/footer */
        }

        /* Styling for the login form container */
        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 300px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Center the form's content */
        .login-container form {
            display: flex;
            flex-direction: column; /* Stack inputs and button vertically */
            align-items: center; /* Center align inputs and button */
            width: 100%; /* Ensure the form uses the full width of the container */
        }

        /* Style for input fields */
        .login-container input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            text-align: center;
            background-color: #f9f9f9; /* Light background for contrast */
            color: #333; /* Darker text for readability */
        }

            /* Placeholder styling for inputs */
            .login-container input::placeholder {
                color: #888; /* Softer color for placeholder */
            }

        /* Styling for the login button */
        .login-container button {
            width: 100px;
            padding: 10px;
            margin-top: 20px;
            background-color: #007bff; /* Button background color */
            color: #fff; /* White text for contrast */
            border: 1px solid #007bff;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            text-align: center;
        }

        .login-container button:hover {
            background-color: #0056b3; /* Darker shade on hover */
            border-color: #0056b3;
        }

        /* Validation error styling */
        .validation-message {
            color: red;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="login-container">
            <form method="post">
                <input type="text" placeholder="Name" asp-for="User.Name" />
                <span class="validation-message" asp-validation-for="User.Name"></span>

                <input type="text" placeholder="Email" asp-for="User.Email" />
                <span class="validation-message" asp-validation-for="User.Email"></span>

                <input type="text" placeholder="Phone Number" asp-for="User.PhoneNumber" />
                <span class="validation-message" asp-validation-for="User.PhoneNumber"></span>

                <input type="password" placeholder="Password" asp-for="User.Password" />
                <span class="validation-message" asp-validation-for="User.Password"></span>

                <input type="password" placeholder="Confirm Password" asp-for="ConfirmPassword" />
                <span class="validation-message" asp-validation-for="ConfirmPassword"></span>

                @* delete later *@
@*                 <span class="validation-message" asp-validation-for="User.ID"></span>

                <span class="validation-message" asp-validation-for="User.Role"></span> *@
                <button>Register</button>
            </form>
        </div>
    </div

    <partial name="_ValidationScriptsPartial" />
</body>
</html>